<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LeagueActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:padding="0dp" android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.0" android:contentDescription="@string/background_image"/>
    <ImageView
            android:layout_width="103dp"
            android:layout_height="38dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/logo"/>
    <TextView
            android:text="@string/desired_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            android:textColor="@color/colorAccent" android:textSize="15sp"/>
    <Button
            android:text="@string/next"
            android:layout_width="128dp"
            android:layout_height="54dp"
            android:id="@+id/nextBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:background="@drawable/swoosh_button" android:textColor="@color/colorAccent"
            android:fontFamily="@font/alef" android:textStyle="bold" android:textSize="16sp"
            android:layout_marginBottom="116dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/checkBox8"
            app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/old"
            android:id="@+id/oldImg" android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:scaleType="centerCrop"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="9dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.906" app:layout_constraintDimensionRatio="w,1:1"
            android:background="@drawable/imges_background" android:contentDescription="@string/old"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/man"
            android:id="@+id/menImg"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="9dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            app:layout_constraintHorizontal_bias="0.09" app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/oldImg" android:background="@drawable/imges_background"
            android:contentDescription="@string/man"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/girls"
            android:id="@+id/girlsImg"
            app:layout_constraintStart_toStartOf="@+id/oldImg"
            android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/oldImg"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="9dp"
            app:layout_constraintDimensionRatio="1:1" android:scaleType="centerCrop"
            android:background="@drawable/imges_background" android:contentDescription="@string/girls"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/kids"
            android:id="@+id/kidImg" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/menImg" app:layout_constraintEnd_toEndOf="@+id/menImg"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="9dp"
            app:layout_constraintDimensionRatio="1:1" android:scaleType="centerCrop"
            android:background="@drawable/imges_background" android:contentDescription="@string/kids"/>
    <CheckBox
            android:text="@string/oldCheckBox"
            android:layout_width="105dp"
            android:layout_height="0dp"
            android:id="@+id/checkBox5"
            app:layout_constraintTop_toTopOf="@+id/oldImg" app:layout_constraintBottom_toBottomOf="@+id/oldImg"
            app:layout_constraintStart_toStartOf="@+id/oldImg" app:layout_constraintEnd_toEndOf="@+id/oldImg"
            android:textSize="25sp" android:textColor="@color/colorAccent" android:fontFamily="monospace"
            app:layout_constraintDimensionRatio=""/>
    <CheckBox
            android:text="@string/menCheckBox"
            android:layout_width="108dp"
            android:layout_height="0dp"
            android:id="@+id/checkBox7"
            app:layout_constraintTop_toTopOf="@+id/menImg" app:layout_constraintBottom_toBottomOf="@+id/menImg"
            app:layout_constraintEnd_toEndOf="@+id/menImg" app:layout_constraintStart_toStartOf="@+id/menImg"
            android:textSize="25sp" android:textColor="@color/colorAccent" android:fontFamily="monospace"/>
    <CheckBox
            android:text="@string/girlsCheckBox"
            android:layout_width="132dp"
            android:layout_height="0dp"
            android:id="@+id/checkBox8"
            app:layout_constraintTop_toTopOf="@+id/girlsImg" app:layout_constraintBottom_toBottomOf="@+id/girlsImg"
            app:layout_constraintEnd_toEndOf="@+id/girlsImg" app:layout_constraintStart_toStartOf="@+id/girlsImg"
            android:textSize="25sp" android:textColor="@color/colorAccent" android:fontFamily="monospace"/>
    <CheckBox
            android:text="@string/kidsCheckBox"
            android:layout_width="117dp"
            android:layout_height="0dp"
            android:id="@+id/checkBox9"
            app:layout_constraintTop_toTopOf="@+id/kidImg" app:layout_constraintBottom_toBottomOf="@+id/kidImg"
            app:layout_constraintEnd_toEndOf="@+id/kidImg" app:layout_constraintStart_toStartOf="@+id/kidImg"
            android:textSize="25sp" android:textColor="@color/colorAccent" android:fontFamily="monospace"/>
</android.support.constraint.ConstraintLayout>